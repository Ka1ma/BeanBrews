# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# MongoDB Configuration
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/beanbrews?retryWrites=true&w=majority

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_NAME=beanbrews.sid
SESSION_MAX_AGE=86400000 # 24 hours

# Admin Configuration
ADMIN_EMAIL=admin@beanbrews.com
ADMIN_PASSWORD=admin123
ADMIN_USERNAME=admin

# File Upload Configuration
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=5242880 # 5MB

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window
